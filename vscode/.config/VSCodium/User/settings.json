{
  "workbench.startupEditor": "none",

  // Editor options
  "editor.fontFamily": "Monaspace Neon, FiraCode Nerd Font",
  "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
  "editor.formatOnSave": true,
  "workbench.editor.labelFormat": "short",

  // File Explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "workbench.iconTheme": "material-icon-theme",
  "workbench.tree.indent": 12,

  // Formatter Options
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[fish]": {
    "editor.defaultFormatter": "bmalehorn.vscode-fish"
  },

  "[svelte]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "svelte.enable-ts-plugin": true,
  "prettier.documentSelectors": ["**/*.svelte"],

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  /** ------Auto generated------- **/
  "autoOpenPreviewPanel.openPreviewToSide": true
}
